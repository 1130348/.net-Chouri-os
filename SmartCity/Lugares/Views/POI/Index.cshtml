@model IEnumerable<ModelLibrary.Models.POI>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Local.NomeLocal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomePonto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoPonto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Local.NomeLocal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomePonto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoPonto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
